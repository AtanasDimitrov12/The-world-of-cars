@page
@model TheCarApp.Pages.SignUpPageModel
@{
    ViewData["Title"] = "Sign Up";
}
<link rel="stylesheet" href="~/css/Register.css" asp-append-version="true" />


<div class="flex-container">
    <div class="containerSignUp">
        <input type="checkbox" id="flip">
        <div class="cover">
            <div class="front">
                <img src="/pictures/opel.jpg" alt="">
                <div class="text">
                    <span class="text-1">Every new friend is a <br> new adventure</span>
                    <span class="text-2">Let's get connected</span>
                </div>
            </div>
        </div>
        <div class="forms">
            <div class="form-content">
                <div class="login-form">
                    <div class="title">Login</div>
                    <form method="post" asp-page-handler="Login">
                        <div class="input-boxes">
                            <div class="input-box">
                                <i class="fas fa-envelope"></i>
                                <input asp-for="LogInUser.email" type="text" placeholder="Enter your email" required>
                            </div>
                            <div class="input-box">
                                <i class="fas fa-lock"></i>
                                <input asp-for="LogInUser.password" type="password" placeholder="Enter your password" required>
                            </div>
                            <div class="text"><a href="#">Forgot password?</a></div>
                            <input type="submit" value="Submit">
                            <div class="text sign-up-text">Don't have an account? <label for="flip">SignUp now</label></div>
                        </div>
                    </form>
                </div>
                <div class="signup-form">
                    <div class="title">Signup</div>
                    <form method="post" asp-page-handler="SignUp">
                        <div class="input-boxes">
                            <div class="input-box">
                                <i class="fas fa-user"></i>
                                <input asp-for="newUser.Username" type="text" placeholder="Enter Username" required>
                            </div>
                            <div class="input-box">
                                <i class="fas fa-envelope"></i>
                                <input asp-for="newUser.email" type="text" placeholder="Enter Email" required>
                            </div>
                            <div class="input-box">
                                <i class="fas fa-lock"></i>
                                <input asp-for="newUser.password" type="password" placeholder="Enter Password" required>
                            </div>
                            <div class="input-box">
                                <i class="fas fa-lock"></i>
                                <input asp-for="newUser._licenseNumber" type="text" placeholder="Enter License Number" required>
                            </div>
                            <input type="submit" value="Sign Up">
                            <div class="text sign-up-text">Already have an account? <a href="/login"><label for="flip">LogIn now</label></a></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
